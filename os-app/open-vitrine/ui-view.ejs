<%
locals.OLSKPageTitle = OLSKLocalized('KOMVitrineTitle');
locals.OLSKPageDescription = OLSKLocalized('KOMVitrineDescription');
locals.OLSKPageAssets = [
	'/_shared/__external/normalize.css/normalize.css',
	'/_shared/__external/OLSKLayout/ui-style.css',
	'/_shared/common/ui-style.css',
	'ui-style.css',
];
locals.OLSKPageUseLivereload = process.env.NODE_ENV === 'development';
locals.OLSKPagePublicConstants = {
	OLSKSharedPageCurrentLanguage: OLSKSharedPageCurrentLanguage,
};
locals.OLSKPageMetaTags = {
	viewport: 'width=device-width',
};
locals.OLSKPageTouchIconURL = process.env.KOM_TOUCH_ICON_URL;
%>

<div class="KOMVitrine OLSKCommon">

<%- include('../_shared/__external/OLSKLanguageSwitcher/main.ejs') %>

<hr>

<div class="KOMVitrineIdentity OLSKCommonIdentityCard">
	<img class="KOMVitrineIdentityLogo" src="/_shared/KOMRootLink/ui-assets/identity.svg" role="presentation" />
	<section>
		<span class="KOMVitrineIdentityName"><%= OLSKLocalized('KOMVitrineTitle') %></span>
		<br />
		<span class="KOMVitrineIdentityBlurb"><%= OLSKLocalized('KOMVitrineDescription') %></span>
	</section>
</div>

<article class="KOMVitrineContent">

<%- OLSKStringReplaceTokens(KOMVitrineContent, {}) %>

<h1 class="KOMVitrineVideoHeading"><%= OLSKLocalized('KOMVitrineVideoHeadingText') %></h1>

<div class="KOMVitrineVideo">
	<iframe class="KOMVitrineVideoFrame" <%= IsTestingBehaviour ? 'fake-' : '' %>src="<%= process.env.KOM_VITRINE_VIDEO_URL %>" width="320" height="568" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
</div>

</article>

<hr />

<%- include('../_shared/__external/ROCORootLink/main.ejs') %>

</div>
